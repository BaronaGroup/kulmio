{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "schema": {
      "type": "string",
      "enum": [
        "V3",
        "https://raw.githubusercontent.com/BaronaGroup/kulmio/master/generated/json-schemas/config-v3.json"
      ]
    },
    "config": {
      "type": "object",
      "required": [],
      "properties": {
        "envDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "envFiles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "baseDir": {
          "type": "string"
        },
        "screenSuffix": {
          "type": "string"
        },
        "uiPort": {
          "type": "number"
        }
      },
      "additionalProperties": false
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "command", "workDir"],
        "properties": {
          "name": {
            "type": "string"
          },
          "aliases": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "softDependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "envName": {
            "type": "string"
          },
          "useHealthForIsRunning": {
            "type": "boolean"
          },
          "command": {
            "type": "string"
          },
          "stopCommand": {
            "type": "string"
          },
          "healthCommand": {
            "type": "string"
          },
          "build": {
            "type": "string"
          },
          "workDir": {
            "type": "string"
          },
          "env": {},
          "envFiles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "screenSuffix": {
            "type": "string"
          },
          "excludeFromAll": {
            "type": "boolean"
          },
          "groups": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "execPrefix": {
            "type": "string"
          },
          "logParser": {
            "type": "object",
            "required": [],
            "properties": {
              "unhealthy": {
                "type": "string"
              },
              "possiblyHealthy": {
                "type": "string"
              },
              "timestamp": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },
    "extends": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["schema", "services"]
}
