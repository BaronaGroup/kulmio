{
  "name": "kulmio",
  "version": "0.3.0",
  "dependencies": {
    "ajv": "8.11.0",
    "express": "4.18.2",
    "schematar": "2.2.0",
    "socket.io": "4.5.3",
    "tail-file": "1.4.15",
    "wtfnode": "0.9.1"
  },
  "license": "mit",
  "author": {
    "name": "Tapani Haka"
  },
  "repository": "BaronaGroup/kulmio",
  "devDependencies": {
    "@types/express": "4.17.14",
    "@types/jest": "29.2.0",
    "@types/mkdirp": "1.0.2",
    "@types/node": "18.11.2",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/websocket": "1.0.5",
    "@typescript-eslint/eslint-plugin": "5.40.1",
    "@typescript-eslint/parser": "5.40.1",
    "@vitejs/plugin-react": "2.1.0",
    "autoprefixer": "10.4.12",
    "eslint": "8.25.0",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-hooks": "4.6.0",
    "import-sort-style-module": "6.0.0",
    "jest": "29.2.1",
    "mkdirp": "1.0.4",
    "npm-release": "1.0.0",
    "postcss": "8.4.18",
    "pre-commit": "1.2.2",
    "pre-commit-eslint-and-prettier": "1.0.0",
    "prettier": "2.7.1",
    "prettier-plugin-import-sort": "0.0.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "socket.io-client": "4.5.3",
    "tailwindcss": "3.2.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tslint": "6.1.3",
    "typescript": "4.8.4",
    "vite": "3.1.8",
    "websocket": "1.0.34",
    "zod": "3.19.1"
  },
  "bin": "./bin/kulmio",
  "scripts": {
    "build": "ts-node src/backend/build-schemas && tsc --project tsconfig.json && vite build",
    "prepare": "npm run build",
    "release": "npm-release",
    "test-local": "jest --forceExit",
    "test": "npm run build && docker build --tag kulmio:test . && docker run --rm --init kulmio:test",
    "lint": "tslint --project tsconfig.json",
    "prettier": "find src -name '*.ts' | xargs prettier --write",
    "pre-commit-eslint-and-prettier": "pre-commit-eslint-and-prettier",
    "dev": "vite",
    "tsc": "tsc",
    "preview": "vite preview"
  },
  "jest": {
    "collectCoverageFrom": [
      "/src/**/*.js"
    ],
    "testMatch": [
      "**/*-test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFiles": [
      "<rootDir>/src/test/test-setup.ts"
    ],
    "testEnvironment": "node"
  },
  "pre-commit": [
    "pre-commit-eslint-and-prettier"
  ],
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
