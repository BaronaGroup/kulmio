{
  "name": "kulmio",
  "version": "0.0.3",
  "dependencies": {
    "ajv": "6.10.1",
    "wtfnode": "0.8.0"
  },
  "license": "mit",
  "author": {
    "name": "Tapani Haka"
  },
  "repository": "BaronaGroup/kulmio",
  "devDependencies": {
    "@types/jest": "24.0.15",
    "@types/mkdirp": "0.5.2",
    "@types/node": "10.14.13",
    "@types/websocket": "0.0.40",
    "jest": "24.8.0",
    "mkdirp": "0.5.1",
    "mongoose": "5.6.5",
    "npm-release": "1.0.0",
    "schematar": "1.5.0",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "ts-node-dev": "1.0.0-pre.40",
    "tslint": "5.18.0",
    "typescript": "3.5.3",
    "websocket": "1.0.29"
  },
  "bin": "./bin/kulmio",
  "scripts": {
    "build": "ts-node src/build-schemas && tsc --project tsconfig.json",
    "prepare": "npm run build",
    "release": "npm-release",
    "test-local": "jest --forceExit",
    "test": "npm run build && docker build --tag kulmio:test . && docker run --rm --init kulmio:test",
    "lint": "tslint --project tsconfig.json"
  },
  "jest": {
    "collectCoverageFrom": [
      "/src/**/*.js"
    ],
    "testMatch": [
      "**/*-test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFiles": [
      "<rootDir>/src/test/test-setup.ts"
    ],
    "testEnvironment": "node"
  }
}
