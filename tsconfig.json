{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "target": "es2017",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2016", "es2017", "dom"],
    "module": "commonjs",
    "outDir": "build",
    "incremental": true
  },
  "include": ["src", "generated"]
}
